<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Amis"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_friend"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/baseline_group_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newFriendButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_button"
        android:text="Demandes d'ami"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friendButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/friendButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:background="@drawable/rounded_button"
        android:text="Amis"
        app:layout_constraintBottom_toBottomOf="@+id/newFriendButton"
        app:layout_constraintEnd_toStartOf="@+id/newFriendButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notificationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_notification"
        android:gravity="center"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:padding="4dp"
        android:text="3"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/newFriendButton"
        app:layout_constraintEnd_toEndOf="@+id/newFriendButton"
        app:layout_constraintTop_toTopOf="@+id/newFriendButton"
        app:layout_constraintVertical_bias="0.27" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="339dp"
        android:layout_height="444dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/layout_gap"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:showDividers="middle">

            <include layout="@layout/pseudo_row" />

            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


            <include layout="@layout/pseudo_row" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>