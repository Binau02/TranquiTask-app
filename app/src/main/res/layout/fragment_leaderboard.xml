<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_below="@+id/Bottomlayout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="40dp"
                android:layout_marginTop="-60dp"
                app:cardBackgroundColor="@color/my_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/leaderboard"
                            android:textSize="24dp"
                            android:textColor="@color/my_dark"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/filtre"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/filter"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                app:cardBackgroundColor="@color/my_primary_light"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/fleche_gauche"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:paddingStart="10dp"
                                        android:src="@drawable/back_arrow" />
                                    <TextView
                                        android:id="@+id/text_middle_categorie"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CatÃ©gorie"
                                        android:textSize="20dp"
                                        android:textColor="@color/my_dark"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>

                                    <ImageView
                                        android:id="@+id/fleche_droite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="8dp"
                                        android:src="@drawable/arrow_forward" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="40dp"
                        android:paddingBottom="40dp"
                        android:paddingTop="5dp"
                        android:gravity="bottom">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|top">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="90dp"
                                android:background="@color/my_secondary_light"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"/>
                                <TextView
                                    android:id="@+id/pseudoThird"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pseudo"
                                    android:gravity="center"
                                    android:textSize="16dp"/>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    >

                                    <TextView
                                        android:id="@+id/coin_amount_third"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/coin_amount"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="15dp"
                                        android:text="947"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="20sp"
                                        android:layout_height="20sp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="-10dp"
                                        android:layout_toEndOf="@+id/coin_amount_third"
                                        android:src="@drawable/or" />

                                </RelativeLayout>

                            </LinearLayout>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatarThird"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="50dp"
                                android:elevation="10dp"
                                android:src="@drawable/default_profil_picture"
                                android:layout_centerHorizontal="true"/>
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="110dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:elevation="10dp"
                                    android:src="@drawable/rounded_third"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3"
                                    android:elevation="15dp"
                                    android:textStyle="bold"
                                    android:textSize="19dp"/>
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/LayoutMiddle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|top">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="40dp"
                                android:background="@color/my_primary_light"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"/>
                                <TextView
                                    android:id="@+id/pseudoFirst"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pseudo"
                                    android:gravity="center"
                                    android:textSize="16dp"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/coin_amount_first"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/coin_amount"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="15dp"
                                        android:text="947"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="20sp"
                                        android:layout_height="20sp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="-10dp"
                                        android:layout_toEndOf="@+id/coin_amount_first"
                                        android:src="@drawable/or" />

                                </RelativeLayout>
                            </LinearLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatarFirst"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:elevation="10dp"
                                android:src="@drawable/default_profil_picture"
                                android:layout_centerHorizontal="true"/>
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="60dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:elevation="10dp"
                                    android:src="@drawable/rounded_first"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="1"
                                    android:elevation="15dp"
                                    android:textStyle="bold"
                                    android:textSize="19dp"/>
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|top">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="65dp"
                                android:background="@color/my_secondary_light"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"/>
                                <TextView
                                    android:id="@+id/pseudoSecond"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pseudo"
                                    android:gravity="center"
                                    android:textSize="16dp"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    >

                                    <TextView
                                        android:id="@+id/coin_amount_second"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/coin_amount"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="15dp"
                                        android:text="947"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="20sp"
                                        android:layout_height="20sp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="-10dp"
                                        android:layout_toEndOf="@+id/coin_amount_second"
                                        android:src="@drawable/or" />

                                </RelativeLayout>
                            </LinearLayout>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatarSecond"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="25dp"
                                android:elevation="10dp"
                                android:src="@drawable/default_profil_picture"
                                android:layout_centerHorizontal="true"/>
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="85dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:elevation="10dp"
                                    android:src="@drawable/rounded_second"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="2"
                                    android:elevation="15dp"
                                    android:textStyle="bold"
                                    android:textSize="19dp"/>
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="-30dp">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/my_primary_light">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_leaderboard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="8dp"
                        android:layout_gravity="center"
                        android:paddingTop="20dp">
                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>